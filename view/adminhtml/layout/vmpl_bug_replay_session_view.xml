<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <update handle="styles"/>
  <update handle="vmpl_bug_replay"/>
  <body>
    <referenceBlock name="vmpl.bug-replay.recorder">
      <arguments>
        <argument name="jsLayout" xsi:type="array">
          <item name="components" xsi:type="array">
            <item name="replayProvider" xsi:type="array">
              <item name="config" xsi:type="array">
                <item name="configuration" xsi:type="array">
                  <item name="enabled" xsi:type="boolean">true</item>
                </item>
              </item>
            </item>
          </item>
        </argument>
      </arguments>
    </referenceBlock>
    <move element="vmpl.bug-replay.player" destination="content"/>
  </body>
</page>
